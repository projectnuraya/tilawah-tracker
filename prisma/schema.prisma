generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id                String             @id @default(uuid())
  name              String?
  email             String?            @unique
  emailVerified     DateTime?          @map("email_verified")
  image             String?            @map("avatar_url")
  createdAt         DateTime           @default(now()) @map("created_at")
  updatedAt         DateTime           @updatedAt @map("updated_at")
  accounts          Account[]
  coordinatorGroups CoordinatorGroup[]
  sessions          Session[]

  @@map("coordinators")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Group {
  id                String             @id @default(uuid())
  name              String
  publicToken       String             @unique @map("public_token")
  createdAt         DateTime           @default(now()) @map("created_at")
  updatedAt         DateTime           @updatedAt @map("updated_at")
  coordinatorGroups CoordinatorGroup[]
  participants      Participant[]
  periods           Period[]

  @@map("groups")
}

model CoordinatorGroup {
  id            String   @id @default(uuid())
  coordinatorId String   @map("coordinator_id")
  groupId       String   @map("group_id")
  joinedAt      DateTime @default(now()) @map("joined_at")
  coordinator   User     @relation(fields: [coordinatorId], references: [id], onDelete: Cascade)
  group         Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([coordinatorId, groupId])
  @@map("coordinator_groups")
}

model Participant {
  id                 String              @id @default(uuid())
  groupId            String              @map("group_id")
  name               String
  whatsappNumber     String?             @map("whatsapp_number")
  isActive           Boolean             @default(true) @map("is_active")
  createdAt          DateTime            @default(now()) @map("created_at")
  updatedAt          DateTime            @updatedAt @map("updated_at")
  participantPeriods ParticipantPeriod[]
  group              Group               @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@index([groupId])
  @@index([groupId, isActive])
  @@map("participants")
}

model Period {
  id                 String              @id @default(uuid())
  groupId            String              @map("group_id")
  periodNumber       Int                 @map("period_number")
  startDate          DateTime            @map("start_date") @db.Date
  endDate            DateTime            @map("end_date") @db.Date
  status             String
  isArchived         Boolean             @default(false) @map("is_archived")
  lockedAt           DateTime?           @map("locked_at")
  createdAt          DateTime            @default(now()) @map("created_at")
  updatedAt          DateTime            @updatedAt @map("updated_at")
  participantPeriods ParticipantPeriod[]
  group              Group               @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@index([groupId])
  @@index([groupId, status])
  @@map("periods")
}

model ParticipantPeriod {
  id             String      @id @default(uuid())
  participantId  String      @map("participant_id")
  periodId       String      @map("period_id")
  juzNumber      Int         @map("juz_number")
  progressStatus String      @default("not_finished") @map("progress_status")
  missedStreak   Int         @default(0) @map("missed_streak")
  updatedAt      DateTime    @updatedAt @map("updated_at")
  participant    Participant @relation(fields: [participantId], references: [id], onDelete: Cascade)
  period         Period      @relation(fields: [periodId], references: [id], onDelete: Cascade)

  @@unique([participantId, periodId])
  @@index([periodId, juzNumber])
  @@map("participant_periods")
}
